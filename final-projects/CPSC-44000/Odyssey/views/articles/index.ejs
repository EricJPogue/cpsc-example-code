   <div class="container">
       <h1 class="mt-4 mb-4">Forum</h1>
       <h4>Discussions for things Overwatch Esports related</h4>
       <a href="/articles/new" class="btn btn-success">Create New Post</a>

       <% articles.forEach(article => { %>
            <div class="card mt-4"> 
                <div class="card-body">
                    <h4 class="card-title"><%= article.title %> </h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdAt.toLocaleDateString() %> 
                    </div>
                    <div class="card-text mb-2"><%= article.description%></div>
                    <a href="articles/<%= article.slug%>" class="btn btn-primary">Read More</a>
                    <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline"><button type="submit" class="btn btn-danger">Delete</button></form>
                    <a href="articles/edit/<%= article.id%>" class="btn btn-info">Edit</a>
                    
                </div>
            </div>
       <% }) %> 

   </div>
